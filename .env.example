# Generate a random secret: https://generate-secret.vercel.app/32 or `openssl rand -base64 32`
AUTH_SECRET=****

# The following keys below are automatically created and
# added to your environment when you deploy on vercel

# AI Gateway API Key (required for non-Vercel deployments)
# For Vercel deployments, OIDC tokens are used automatically
AI_GATEWAY_API_KEY=****


# Instructions to create a Vercel Blob Store here: https://vercel.com/docs/storage/vercel-blob
BLOB_READ_WRITE_TOKEN=****

# Instructions to create a PostgreSQL database here: https://vercel.com/docs/storage/vercel-postgres/quickstart
POSTGRES_URL=****


# Instructions to create a Redis store here:
# https://vercel.com/docs/redis
REDIS_URL=****

# OpenTelemetry Configuration
# Service name for telemetry data
SERVICE_NAME=ai-chatbot

# OpenTelemetry Collector endpoint (optional, defaults to localhost:4318)
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318

# Bearer token for OTLP authentication (optional)
OTEL_EXPORTER_OTLP_BEARER_TOKEN=****

# Observe.ai specific configuration (if using Observe.ai)
OBSERVE_INGEST_TOKEN=****
OBSERVE_CUSTOMER_ID=****

# Client-side OpenTelemetry configuration (Next.js public env vars)
NEXT_PUBLIC_SERVICE_NAME=ai-chatbot-client
NEXT_PUBLIC_OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318
NEXT_PUBLIC_OTEL_EXPORTER_OTLP_BEARER_TOKEN=****
NEXT_PUBLIC_OBSERVE_INGEST_TOKEN=****
NEXT_PUBLIC_OBSERVE_CUSTOMER_ID=****
